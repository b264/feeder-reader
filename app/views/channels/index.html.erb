<h1>Listing Channels</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @channels.each do |channel| %>
  <tr>
    <td><%= link_to channel.title, channel %></td>
    <td><%= channel.description %></td>
    <td><%= link_to 'Show Channel', channel %></td>
    <td><%= link_to 'Edit Channel', edit_channel_path(channel) %></td>
    <td><%= link_to 'Remove Channel', channel, method: :delete, data: { confirm: "Do you want to delete #{channel.title || 'this channel'}?" } %></td>
  </tr>
<% end %>
</table>

<br />

